@model eimdbapi.Models.Employee
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Novo Colaborador</h2>

@using (Html.BeginForm("Create", "Employee"))
{
    <div class="=" form-group">
        @Html.LabelFor(e => e.Name)
        @Html.TextBoxFor(e => e.Name, new { @class = "form-control" })
    </div>
    <div class="=" form-group">
        @Html.LabelFor(e => e.Job)
        @Html.TextBoxFor(e => e.Job, new { @class = "form-control" })
    </div>
}

